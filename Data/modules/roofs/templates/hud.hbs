<div class="control-icon roof {{#if isRoof}}active{{/if}}">
  <img src="modules/roofs/img/roof.svg" width="36" height="36" title="{{localize 'ROOFS.sendToRoof'}}">
</div>
<div class="control-icon floor {{#unless isRoof}}active{{/unless}}">
  <img src="modules/roofs/img/floor.svg" width="36" height="36" title="{{localize 'ROOFS.sendToFloor'}}">
</div>
{{#if isRoof}}
<div class="control-icon mode">
  <img src="modules/roofs/img/{{mode}}.svg" width="36" height="36" title="{{localize 'ROOFS.toggleMode'}}">
</div>
<div class="roofs-opacity">
  <div class="vslider-group">
    <input class="vslider" name="open" type="range" value="{{open}}" min="0" max="1" step="0.1" data-dtype="Number">
    <div class="vslider-label"><i class="fa fa-eye"></i></div>
  </div>
  <div class="vslider-group">
    <input class="vslider" name="closed" type="range" value="{{closed}}" min="0" max="1" step="0.1" data-dtype="Number">
    <div class="vslider-label"><i class="fas fa-low-vision"></i></div>
  </div>
</div>
{{/if}}